<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="App_Plugins\uSeoToolkit\**\*.*">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
    <None Include="build\**\*.*">
      <Pack>True</Pack>
      <PackagePath>build</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Remove="App_Plugins\uSeoToolkit\Redirects\css\main.css" />
    <None Remove="App_Plugins\uSeoToolkit\Redirects\Dialogs\createRedirect.controller.js" />
    <None Remove="App_Plugins\uSeoToolkit\Redirects\Dialogs\CreateRedirect.html" />
    <None Remove="App_Plugins\uSeoToolkit\Redirects\Dialogs\linkPicker.controller.js" />
    <None Remove="App_Plugins\uSeoToolkit\Redirects\Dialogs\linkPicker.html" />
    <None Remove="App_Plugins\uSeoToolkit\Redirects\lang\en-us.xml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\uSeoToolkit.Umbraco.Common\uSeoToolkit.Umbraco.Common.csproj" />
    <ProjectReference Include="..\uSeoToolkit.Umbraco.Redirects.Core\uSeoToolkit.Umbraco.Redirects.Core.csproj" />
  </ItemGroup>

</Project>
